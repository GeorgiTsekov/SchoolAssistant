@model SchoolAssistant.Web.ViewModels.Lectures.CreateLectureInputModel
@{
    this.ViewData["Title"] = "Add new Lecture";
}

<form method="post" class="col-md-10 offset-md-2" enctype="multipart/form-data">
    <h1>@ViewData["Title"]</h1>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="LectureName"></label>
        <input asp-for="LectureName" class="form-control" />
        <span asp-validation-for="LectureName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl"></label>
        <input asp-for="VideoUrl" class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Presentations"></label>
        <input asp-for="Presentations" class="form-control-file" />
        <span asp-validation-for="Presentations" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" value="Create course" />
</form>
